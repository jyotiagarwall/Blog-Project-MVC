@model IEnumerable<Blog_Project_MVC.Blog>

@{
    ViewBag.Title = "Index";
}

<h2>Blog Home Page</h2>


<table class="table">
    

@foreach (var item in Model) {
    <tr>
        <td>
            <b style="color:brown;font-size:large;">@Html.DisplayFor(modelItem => item.Btitle)</b>

        </td>
    </tr>
        
    <tr>
        <td>
           Category <a href="~/Blog/@item.Bcontent">@Html.DisplayFor(modelItem => item.Bcontent)</a>
        </td>
    </tr>
       
       
       
       

    
}

</table>
